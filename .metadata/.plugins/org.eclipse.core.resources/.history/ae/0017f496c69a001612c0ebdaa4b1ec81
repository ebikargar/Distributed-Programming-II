<!ELEMENT NffgVerifier (nffgSet,policySet)+>
<!ELEMENT nffgSet (nffg)+>
<!ELEMENT nffg (nodeSet*,linkset*,policyset*)>
	<!ATTLIST nffg  
	name 			ID 		#REQUIRED>
	<!ELEMENT nodeSet (node*)>
	<!ELEMENT node(providerCatalogue*)>
	<!ATTLIST node 
		name 	ID 		#REQUIRED
		linkId	IDREF	#REQUIRED>
	<!ELEMENT providerCatalogue>
	<!ATTLIST  providerCatalogue
	functionalType ( firewall| DPI| NAT| antispam| web_cache| VPN_gateway| web_server| web_client| mail_server| mail_client) #FIXED >

<!ELEMENT linkset (links*)>
<!ATTLIST links
	Name	   	ID 		#REQUIRED
	SourceNode 	IDREF	#REQUIRED
	DestNode	IDREF	#REQUIRED > //their both are idref to node
	
<!ELEMENT SetOfPolicies(Policy)*>
<!ELEMENT Policy(reachability|traversal)*> 
<!ATTLIST Policy
	Name	   	ID 		#REQUIRED
	Result( TRUE| FALSE)
	srcnode 			CDATA 	#REQUIRED
	destnode			CDATA 	#REQUIRED
	traverscomponent	CDATA	#IMPLIED>

