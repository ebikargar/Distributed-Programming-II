<?xml version="1.0" encoding="UTF-8"?>

<project basedir="." default="generate-artifacts" name="Ant script for assignment2">
	<description>
		Ant script for assignment2
	</description>

	<taskdef name="wjc" classname="org.jvnet.ws.wadl2java.WJCTask">
		<classpath>
			<fileset dir="${lib.dir}" includes="*.jar" />
		</classpath>

	</taskdef>
	<target name="generate-artifacts">

		<mkdir dir="${gen.dir}" />
		<wjc targe="${gen.dir}" autoSchemaPackage="false"
			package="it.polito.dp2.NFFG.sol2" description="${Wadl}" />

	</target>
	</project>

