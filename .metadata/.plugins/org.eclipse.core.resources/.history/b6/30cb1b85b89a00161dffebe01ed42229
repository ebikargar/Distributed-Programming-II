<!ELEMENT NffgVerifier (nffgSet,policySet)+>
<!ELEMENT nffgSet (nffg)+>
<!ELEMENT nffg (nodeSet,linkset)+>
	<!ATTLIST nffg  
	name 	ID 		#REQUIRED>
	<!ELEMENT nodeSet (node*)>
	<!ELEMENT node>
	<!ATTLIST node //check the syntax for idref
		name 	ID 		#REQUIRED
		linkId	IDREF	#REQUIRED
		ftype 	IDREF 	functionalType>
	<!ELEMENT functionalType ( firewall| DPI| NAT| antispam| web_cache| VPN_gateway| web_server| web_client| mail_server| mail_client) >

<!ELEMENT linkset (links*)>
<!ATTLIST links
	Name	   	ID 		#REQUIRED
	SourceNode 	IDREF	#REQUIRED
	DestNode	IDREF	#REQUIRED > //their both are idref to node
	
<!ELEMENT SetOfPolicies(Policy)*>
<!ELEMENT Policy(reachability|traversal)*> 
<!ATTLIST Policy
	Name	   	ID 		#REQUIRED
	NF_FG		IDREF 	#REQUIRED
	Result( TRUE| FALSE)>
<!ELEMENT reachability()>
<!ATTLIST reachability
 NF_FG		IDREF 	#REQUIRED
 link		IDREF>

<!ELEMENT Traversal()>

