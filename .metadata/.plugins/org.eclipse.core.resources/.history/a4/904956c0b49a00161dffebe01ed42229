<!ELEMENT NffgVerifier (nffgSet|policySet)+>
<!ELEMENT nffgSet (nffg*)>
<!ELEMENT nffg (nodeSet*)>
	<!ATTLIST nffg  
	name 	ID 		#REQUIRED>
<!ELEMENT nodeSet (node*)>
<!ELEMENT node>
	<!ATTLIST node 
		name 	ID 		#REQUIRED
		linkId	IDREF	#REQUIRED
		functionalType ( firewall| DPI| NAT| antispam| web_cache| VPN_gateway| web_server| web_client| mail_server| mail_client) >

<!ELEMENT Links (Nodes*)>
<!ATTLIST Links
	Name	   	ID 		#REQUIRED
	SourceNode 	CDATA	#REQUIRED
	DestNode	CDATA	#REQUIRED >
	
<!ELEMENT SetOfPolicies(Policy)*>
<!ELEMENT Policy(reachability|traversal)*> 
<!ATTLIST Policy
	Name	   	ID 		#REQUIRED
	NF_FG		IDREF 	#REQUIRED
	Result( TRUE| FALSE)>
<!ELEMENT reachability()>
<!ATTLIST reachability
 NF_FG		IDREF 	#REQUIRED
 link		IDREF>

<!ELEMENT Traversal()>

