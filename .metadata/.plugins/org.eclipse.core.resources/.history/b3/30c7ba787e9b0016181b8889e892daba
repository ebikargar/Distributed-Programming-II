<!ELEMENT NffgVerifier (nffgSet+,policySet+)>
<!ELEMENT nffgSet (nffg)+>
<!ELEMENT nffg (nodeSet*,linkSet*,policySet*)>
	<!ATTLIST nffg  
				name 			ID 		#REQUIRED>
	<!ELEMENT nodeSet (node*)>
	<!ELEMENT node (providerCat*)>
	<!ATTLIST node 
		name 		ID 		#REQUIRED
		linkId		IDREF	#REQUIRED>
		
	<!ELEMENT providerCat EMPTY>
	<!ATTLIST  providerCat
	funcType	(firewall|DPI|NAT|antispam|web_cache|VPN_gateway|web_server|web_client|mail_server|mail_client)	"firewall">

<!ELEMENT linkSet (links*)>
<!ELEMENT links EMPTY>
<!ATTLIST links
	Name	   	ID 		#REQUIRED
	SourceNode 	IDREF	#REQUIRED
	DestNode	IDREF	#REQUIRED>
<!ELEMENT policySet (policy)*>
<!ELEMENT policy EMPTY>
<!ATTLIST Policy
	Name	   				ID 							#REQUIRED
	pType					(reacheablilit|travesal)	#REQUIRED
	Result 					(TRUE|FALSE)				#REQUIRED
	srcnode 				IDREF					 	#REQUIRED
	destnode				IDREF 						#REQUIRED
	traverscomponent		CDATA						#IMPLIED>

